{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2024",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "#src/*": [
        "./src/*"
      ],
      "#helpers/*": [
        "./src/helpers/*"
      ],
      "#resources/*": [
        "./resources/*"
      ],
      "#entities/*": [
        "./resources/entities/*"
      ]
    }
  },
  "include": [
    "./src",
    "./resources",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
  ]
}