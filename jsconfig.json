{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "#src/*": [
        "./src/*"
      ],
      "#scanners/*": [
        "./src/scanners/*"
      ],
    }
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
  ]
}